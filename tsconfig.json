{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "components/Home/Slider.jsx",
    "components/Home/Category.jsx",
    "components/Home/Header.jsx",
    "components/Home/PetListByCategory.jsx",
    "app/(tabs)/profile.jsx",
    "app/(tabs)/inbox.jsx",
    "app/(tabs)/home.jsx",
    "app/(tabs)/favorite.jsx",
    "app/(tabs)/_layout.jsx",
    "app/index.jsx",
    "app/_layout.tsx",
    "app/login/index.jsx"
  ]
}
